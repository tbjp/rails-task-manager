<h1 class="title pt-3">My Tasks</h1>

<% @tasks.each do |task| %>
  <div class="card p-2 my-2 d-flex flex-row justify-content-between">
    <div><%= link_to task.title, task_path(task), class: 'link text-dark' %></div>
  <% if task.completed %>
    <div>✅ -
  <% else %>
    <div>🔲 -
  <% end %>
  <%= link_to '❌', task_path(task), class: 'link', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
  </div>
<% end %>

<%= link_to 'Add task', new_path %>
